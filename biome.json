{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"root": ".",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/paraglide/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"suspicious": {
				"noPrototypeBuiltins": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useButtonType": "off"
			},
			"correctness": {
				"noUnknownProperty": "off",
				"noUnknownFunction": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	}
}
